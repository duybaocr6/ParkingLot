<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="sans-serif"
    android:background="@drawable/parkinglot">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/xevao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="List Employee"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search"
            android:background="@drawable/btn_search"
            android:layout_below="@+id/xevao"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:inputType="textVisiblePassword"
            android:minHeight="48dp"/>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/search">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:text="Ho va Ten"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtEmail"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:text="Email"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtdiachi"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:text="Dia Chi"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtngaysinh"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:text="Ngay Sinh"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtsdt"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:text="So Dien Thoai"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtgioitinh"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:text="Gioi Tinh"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:scrollbars="horizontal|vertical" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>